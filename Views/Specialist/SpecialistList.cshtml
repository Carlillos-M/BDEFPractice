@model List<SpecialistModel>
@{
    ViewData["Title"] = "Especialistas";
    int numero = 0;
}

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
    rel="stylesheet">


  <title>Mevak-La ayuda a tu alcance</title>

  <!-- Bootstrap core CSS -->
  <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet">


  <!-- Additional CSS Files -->
  <link rel="stylesheet" href="~/css/fontawesome.css">
  <link rel="stylesheet" href="~/css/templatemo-scholar.css">
  <link rel="stylesheet" href="~/css/owl.css">
  <link rel="stylesheet" href="~/css/animate.css">
  <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
  <!--

TemplateMo 586 Scholar

https://templatemo.com/tm-586-scholar

-->

<header class="header-area header-sticky bg-black">
    <div class="container bg-black">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <!-- ***** Logo Start ***** -->
            <a class="logo">
              <h1>Mevak</h1>
            </a>
            <!-- ***** Logo End ***** -->

            <!-- ***** Menu Start ***** -->
            <ul class="nav">
              <li class="scroll-to-section">
                <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
              <li class="scroll-to-section">
                <a asp-controller="Specialist" asp-action="SpecialistList">L. Especialistas</a>
              </li>
              <li class="scroll-to-section">
                <a asp-controller="Patient" asp-action="PatientList">Pacientes</a>
              </li>
              <li class="scroll-to-section">
                <a asp-controller="Expediente" asp-action="ExpedienteList">Expedientes</a>
              </li>
            </ul>
            <a class='menu-trigger'>
              <span>Menu</span>
            </a>
            <!-- ***** Menu End ***** -->
          </nav>
        </div>
      </div>
    </div>
  </header>
</head>

<body>
        <!-- ***** Preloader Start ***** -->
  <div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
      <span class="dot"></span>
      <div class="dots">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </div>
  <!-- ***** Preloader End ***** -->

<br>
<br>
<br>
<br>
<h1>Lista de Especialistas</h1>
<a class="btn btn-outline.primary" asp-action="SpecialistAdd" asp-asp-controller="Specialist">Agregar Especialista</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Especialidad</th>
            </tr>
    </thead>
    
    <tbody>
        @foreach( var specialist in Model )
        {
        {
            numero++;
        }

         <tr>
            <th scope="row">@numero</th>
            <td>@specialist.Name</td>
            <td>@specialist.LastName</td>
            <td>@specialist.Major</td>
            <td>
                <a class="btn btn-outline-info" asp-action="SpecialistEdit" asp-controller="Specialist" asp-route-id="@specialist.Id">Editar</a>
                <a class="btn btn-outline-danger" asp-action="SpecialistDelete" asp-controller="Specialist" asp-route-id="@specialist.Id">Borrar</a>
            </td>
         </tr>
        }     
    </tbody>
</table>
  <!-- Bootstrap core JavaScript -->
  <script src="~/jquery/jquery.min.js"></script>
  <script src="~/bootstrap/js/bootstrap.min.js"></script>
  <script src="~/js/isotope.min.js"></script>
  <script src="~/js/owl-carousel.js"></script>
  <script src="~/js/counter.js"></script>
  <script src="~/js/custom.js"></script>
</body>